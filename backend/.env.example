# =============================================================================
# FastAPI App (APP_ prefix)
# =============================================================================
APP_PROJECT_NAME="Next Firebase Auth Backend"
APP_VERSION="0.1.0"
APP_ENVIRONMENT="development"
APP_DEBUG=true
APP_ALLOWED_ORIGINS=["http://localhost:3000","http://frontend:3000","http://localhost:6006"]

# Repository provider: memory | dynamodb
APP_REPOSITORY_PROVIDER=memory

# AWS / DynamoDB Local (managed by Serverless Offline)
# Default: host. Docker Compose overrides to http://websocket:8002
APP_AWS_ENDPOINT_URL="http://serverless:8002"
APP_AWS_REGION="ap-northeast-1"
APP_AWS_ACCESS_KEY_ID="test"
APP_AWS_SECRET_ACCESS_KEY="test"

# DynamoDB Notes table (used by NoteRepository)
APP_DYNAMODB_TABLE_NOTES="notes-development"
# Optional GSIs (uncomment if your table defines these indexes)
# APP_DYNAMODB_GSI_PUBLIC="privacy-updated_at"
# APP_DYNAMODB_GSI_USER="user_id-updated_at"

# WebSocket broadcast URL
# - Development: http://serverless:3000/broadcast/comments
# - Staging/Prod: SAM BroadcastApiUrl output
APP_SERVERLESS_WEBSOCKET_ENDPOINT="http://serverless:3000/broadcast/comments"

# Firebase (development)
APP_FIREBASE_PROJECT_ID="your-firebase-project-id"
# Use emulator only in development
# APP_FIREBASE_AUTH_EMULATOR_HOST="127.0.0.1:9099"

# Firebase Admin (production only; set in your secret manager, not in VCS)
# APP_FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com"
# APP_FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
# APP_FIREBASE_PRIVATE_KEY_ID="your-private-key-id"
# APP_FIREBASE_CLIENT_ID="123456789"
# APP_FIREBASE_AUTH_URI="https://accounts.google.com/o/oauth2/auth"
# APP_FIREBASE_TOKEN_URI="https://oauth2.googleapis.com/token"
# APP_FIREBASE_AUTH_PROVIDER_X509_CERT_URL="https://www.googleapis.com/oauth2/v1/certs"
# APP_FIREBASE_CLIENT_X509_CERT_URL="https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxx%40your-project.iam.gserviceaccount.com"


# =============================================================================
# End of configuration
# =============================================================================
