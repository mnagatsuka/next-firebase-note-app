APP_ENV=development

# Firebase (client SDK)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
# Optional analytics
# NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
# Optional in development
# NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
# Optional (unused if only Auth is used)
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id

# API endpoints
# Client (browser) base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
# Server (Next.js runtime) base URL for internal fetches
API_BASE_URL=http://backend:8000

# WebSocket (local serverless-offline)
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001
# Example for production:
# NEXT_PUBLIC_WEBSOCKET_URL=wss://your-api-gateway-id.execute-api.ap-northeast-1.amazonaws.com/dev

# Server-side Firebase Admin (SSR/edge; production only)
# FIREBASE_PROJECT_ID=your_project_id
# Optional: server-only API key (used if present)
# FIREBASE_API_KEY=your_api_key
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your_project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
# Optional for local server-side auth in dev:
# FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099

# Auth session cookie
# Max age (seconds) for `__session` cookie. Default is 1209600 (14 days).
SESSION_COOKIE_MAX_AGE=1209600

# Misc
# For MSW
NEXT_PUBLIC_API_MOCKING=disabled

# Hot Reload (optional: Only Development)
# CHOKIDAR_USEPOLLING=true
# WATCHPACK_POLLING=true
